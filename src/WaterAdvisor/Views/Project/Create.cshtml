@model WaterAdvisor.Models.Project.Project

@{
    ViewData["Title"] = "Створити проект";
}

<h2>Створити проект</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProjectName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectDate" class="form-control" />
                <span asp-validation-for="ProjectDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectComment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectComment" class="form-control" />
                <span asp-validation-for="ProjectComment" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Створити" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Назад до списку проектів</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
